{% extends 'base.html.twig' %}
{% block stylesheets %}
	{{ encore_entry_link_tags('event') }}
{% endblock %}

{% block title %}Event :
	{{ event.title }}
{% endblock %}

{% block body %}
	<div class="mt-5 ms-5">
		<a href="{{ path('event_index') }}">
			<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left-white" viewbox="0 0 16 16">
				<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
			</svg>
		</a>
	</div>
	<div class="corner d-flex justify-content-center">
		<h1 class="">{{ event.title }}</h1>
	</div>
	<section class="d-flex justify-content-center mb-3">
		<div class="mb-3 m-5 w-75">
			<img src="{{ asset('build/images/' ~ event.image) }}" class="card-img-top" alt="...">
			<div class="card-body">

				<p class="card-text">
					<small class="text-muted">{{ event.date|date }}</small>
				</p>
				<p class="card-text">{{ event.description }}</p>
			</div>
		</div>
	</section>
{% endblock %}
