{% extends 'base.html.twig' %}
{% block stylesheets %}
	{{ encore_entry_link_tags('event') }}
{% endblock %}

{% block title %}Event index
{% endblock %}

{% block body %}
	<header>
		<h1>{{title}}</h1>
	</header>
	<section>
		<h2 class="text-center p-2">Se tenir informé pour mieux jouer !</h2>
	</section>
	<main>
		<div class="p-2">
			<h3 class="border-bottom border-2 border-secondary pb-2">Nos Évènements</h3>
			
		</div>
		<div>
			{% for event in events %}
				<img src="{{ asset('build/images/' ~ event.image) }}" alt="">
				-
				{{ event.title }}
				-
				{{ event.description }}
			{% endfor %}
		</div>
	</main>

{% endblock %}
