{% extends 'base.html.twig' %}

{% block title %}Actualit√© :
	{{ actuality.title }}
{% endblock %}

{% block body %}
	<div class="mt-5 ms-5">
		<a href="{{ path('actuality_index') }}">
			<i class="bi bi-arrow-left fs-1"></i>
		</a>
	</div>
	<div class="d-flex flex-column justify-content-center align-items-center mb-3">
		<div class="d-flex align-items-center">
			<i class="bi bi-newspaper fs-2 me-2 text-primary"></i>
			<h1 class="">{{ actuality.title }}</h1>
			<i class="bi bi-dpad fs-2 ms-2 text-secondary"></i>
		</div>
		<small class="text-muted">{{ actuality.date|date }}</small>
	</div>
	<div class="d-flex justify-content-center align-items-center">
		<img src="{{ asset('build/images/' ~ actuality.image) }}" class="w-50" alt="{{ actuality.title }}">
	</div>
	<p class="m-5">{{ actuality.description|raw }}</p>
{% endblock %}
