{% extends 'base.html.twig' %}

{% block title %}Member index
{% endblock %}

{% block body %}
	<h1>Membres</h1>
	<div class="d-flex justify-content-start">
    <a class="btn btn-secondary btn-lg m-2" href="{{ path('admin_member_add') }}">Créer</a>
    </div>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Image</th>
				<th>Rôle</th>
			</tr>
		</thead>
		<tbody>
			{% for member in members %}
				<tr>
					<td>{{ member.id }}</td>
					<td>{{ member.lastName }}</td>
					<td>{{ member.fisrtName }}</td>
					<td>{{ member.image }}</td>
					<td>
						<a href="{{ path('admin_member_show', {'id': member.id}) }}">Détails</a>
						<a href="{{ path('admin_member_edit', {'id': member.id}) }}">Modifier</a>
						{{ include('admin/admin_member/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">pas de membres trouvés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
